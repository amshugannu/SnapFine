<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow (bottom right) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/inputBg"/>
            <corners android:radius="22dp"/>
            <padding android:left="3dp" android:top="3dp" android:right="0dp" android:bottom="0dp"/>
        </shape>
    </item>
    <!-- Main field with border -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/inputBg"/>
            <corners android:radius="22dp"/>
            <stroke android:width="2dp" android:color="@color/inputBorder"/>
        </shape>
    </item>
</layer-list>
