<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Glass-style background color -->
    <solid android:color="@color/glassFieldBackground" />

    <!-- Rounded corners like TextInputLayout -->
    <corners
        android:topLeftRadius="24dp"
        android:topRightRadius="24dp"
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp" />

    <!-- Optional: Transparent stroke like your input field -->
    <stroke
        android:width="2dp"
        android:background="@drawable/glass_input_3d"
        android:color="@color/brightGlassBlue"/>
</shape>

